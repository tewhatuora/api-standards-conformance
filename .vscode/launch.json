{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug cucumber-js",
      "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
      "args": [
        "--tags", "not @not-implemented",
        "--format", "progress",
        "--format", "json:cucumber_report.json",
        "features/SDHR/fhir-specification.feature:56"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect-brk"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test"
      }
    }
  ]
}
